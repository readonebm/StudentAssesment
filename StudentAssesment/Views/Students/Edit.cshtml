@model StudentsVM;


<form method="post" action="Edit">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="my-5">Edit Data</h1>
        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
            <a asp-controller="Students" asp-action="Index" class="btn btn-warning">Cancel</a>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
    <input asp-for="Id" hidden/>
    <div class="mb-3 row">
        <label for="nim" class="col-sm-2 col-form-label h1">NIM</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="nim" asp-for="NIM">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="nama" class="col-sm-2 col-form-label h1">Nama</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="nama" asp-for="Nama">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="nilai" class="col-sm-2 col-form-label h1">Nilai</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="nilai" asp-for="Nilai">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="catatan" class="col-sm-2 col-form-label h1">Catatan</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="catatan" rows="3" asp-for="Catatan"></textarea>
        </div>
    </div>
</form>

