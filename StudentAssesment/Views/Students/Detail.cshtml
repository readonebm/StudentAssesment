@model DetailStudentVM;


<form method="post" action="Delete">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="my-5">Detail</h1>
        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
            <a asp-controller="Students" asp-action="Index" class="btn btn-warning">Kembali</a>
            @* <button type="submit" class="btn btn-danger" asp-controller="Students" asp-action="Delete">Delete</button> *@
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Delete
            </button>
        </div>
    </div>
    <input asp-for="Id" hidden/>
    <div class="mb-3 row">
        <label for="nim" class="col-sm-2 col-form-label h1">NIM</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="nim" readonly value="@Model.NIM">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="nama" class="col-sm-2 col-form-label h1">Nama</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="nama" readonly value="@Model.Nama">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="nilai" class="col-sm-2 col-form-label h1">Nilai</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="nilai" readonly value="@Model.Nilai">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="catatan" class="col-sm-2 col-form-label h1">Catatan</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="catatan" rows="3" readonly placeholder="@Model.Catatan"></textarea>
        </div>
    </div>
</form>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <form method="post" action="Delete">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Apakah anda yakin ?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                    <p>Menyetujui ini, berarti anda setuju data ini hilang dari daftar!</p>
                    <input asp-for="Id" hidden />
                    <div class="mb-3 row" hidden>
                        <label for="nim" class="col-sm-2 col-form-label h1">NIM</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="nim" readonly value="@Model.NIM">
                        </div>
                    </div>
                    <div class="mb-3 row" hidden>
                        <label for="nama" class="col-sm-2 col-form-label h1">Nama</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="nama" readonly value="@Model.Nama">
                        </div>
                    </div>
                    <div class="mb-3 row" hidden>
                        <label for="nilai" class="col-sm-2 col-form-label h1">Nilai</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="nilai" readonly value="@Model.Nilai">
                        </div>
                    </div>
                    <div class="mb-3 row" hidden>
                        <label for="catatan" class="col-sm-2 col-form-label h1">Catatan</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="catatan" rows="3" readonly placeholder="@Model.Catatan"></textarea>
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                    <a asp-controller="Students" asp-action="Detail" class="btn btn-warning">Cancel</a>
                    <button type="submit" class="btn btn-danger" asp-controller="Students" asp-action="Delete">Agree</button>
            </div>
        </form>
        </div>
    </div>
</div>
